<?xml version = "1.0"?>
<Data>
  <window>
    <x>100</x>
    <y>100</y>

    <width>1280</width>
    <height>1024</height>

    <title>Rendering Equation Approximation</title>
  </window>


  <!-- Camera position -->
  <cam>
    <pos>0,4,8</pos>
    <towards>0,4,0</towards>
  </cam>


  <!-- basic light settings -->
  <light>
    <pos>0,4,0</pos>
    <dir>0,1,0</dir>
    <!-- Set all of the number of radiosity iterations here -->
    <iterations>20</iterations>
  </light>

  <perspective>
    <fov>75.0</fov>
    <nearClip>4.0</nearClip>
    <farClip>20</farClip>
  </perspective>

  <teapot>
    <objFile>resources/teapot/teapot.obj</objFile>
    <shader>teapotShader</shader>
    <diffuse>0.0,1.0,1.0,1.0</diffuse>
    <specular>1.0,1.0,1.0,1.0</specular>
    <shininess>4.0</shininess>
  </teapot>

  <teapotShader>
    <vert>resources/teapot/prog.vert</vert>
    <frag>resources/teapot/prog.frag</frag>
  </teapotShader>

  <box>
    <shader>teapotShader</shader>
    <rowColNum>10</rowColNum>
    <width>8</width>
    <displace>0</displace>
  </box>

  <wallLeft>
    <diffuse>1.0,0.0,0.0,.5</diffuse>
    <specular>1.0,1.0,1.0,.5</specular>
    <shininess>2.0</shininess>
  </wallLeft>

  <wallRight>
    <diffuse>0.0,1.0,0.0,.5</diffuse>
    <specular>1.0,1.0,1.0,.5</specular>
    <shininess>2.0</shininess>
  </wallRight>

  <wallOther>
    <diffuse>1.0,1.0,1.0,.5</diffuse>
    <specular>1.0,1.0,1.0,.5</specular>
    <shininess>2.0</shininess>
  </wallOther>
</Data>
