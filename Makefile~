CC = g++
# CC = clang++

# Warnings frequently signal eventual errors:
CXXFLAGS=`sdl2-config --cflags` -g -W -Wall -std=c++11 -Weffc++ -Wextra -pedantic -O0 -I `sdl2-config --prefix`/include/
LDFLAGS = `sdl2-config --libs` -lm -lexpat -lSDL2_ttf -lSDL2_image

OBJ_LOC = ./build
INCLUDE_LOC = ./include
CPP_LOC = ./lib

EXEC = run

#gets the objects
SOURCES = $(shell find $(CPP_LOC)/*.cpp)
TO_OBJS = $(patsubst $(CPP_LOC)/%.cpp, $(OBJ_LOC)/%.o, $(SOURCES))
OBJS = $(patsubst $(OBJ_LOC)/main.o, , $(TO_OBJS))


$(OBJ_LOC)/%.o: $(CPP_LOC)/%.cpp $(INCLUDE_LOC)/%.h
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(EXEC): $(OBJS)
	$(CXX) $(CXXFLAGS) $(CPP_LOC)/main.cpp -o $@ $(OBJS) $(LDFLAGS)
video:
	avconv -r 60 -i frames/acarrab.%4d.bmp frames/acarrab.mp4
clean:
	rm -rf $(OBJS)
	rm -rf $(EXEC)
	rm -rf $(CPP_LOC)/*~
	rm -rf $(INCLUDE_LOC)/*~
	rm -rf xmlSpec/*~
	rm -rf *~
	rm frames/*.bmp
